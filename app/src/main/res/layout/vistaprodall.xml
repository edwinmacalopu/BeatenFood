<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:divider="@drawable/separadortextwidth"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagendeprodall"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/separadorajustes"
                android:orientation="vertical"
                android:padding="10dp"
                android:showDividers="middle">


                <TextView
                    android:id="@+id/txtpronomprod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nombre producto"
                    android:textColor="@color/colortextnombreprod"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/separadorlinerhorizontal"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/txtprocant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cantidad" />

                    <TextView
                        android:id="@+id/txtpromediuni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="medida unidad" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/separadorlinerhorizontal"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/txtprofechaini"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:background="@drawable/roundedtextfech"
                        android:gravity="center"
                        android:text="fechaini"
                        android:textColor="@color/colortextfechini"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtprofechafin"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:background="@drawable/roundedtextfechfin"
                        android:gravity="center"
                        android:text="fechafin"
                        android:textColor="@color/colortextfechfin"
                        android:textSize="11dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:id="@+id/consumido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cosumido" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>